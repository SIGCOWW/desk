<redpen-conf lang="ja" type="zenkaku2">
    <validators>
        <!--Rules on sentence length-->-
        <validator name="SentenceLength">
            <property name="max_len" value="100" />
        </validator>
        <validator name="CommaNumber" />

        <!--Rules on expressions-->
        <validator name="SuccessiveWord" />
        <validator name="JapaneseStyle" />
        <validator name="InvalidExpression" />
        <validator name="DoubleNegative" />
        <validator name="Okurigana"/>
        <validator name="JapaneseNumberExpression"/>
        <validator name="JapaneseJoyoKanji"/>
        <validator name="JapaneseAmbiguousNounConjunction" />
        <validator name="LongKanjiChain">
            <property name="max_len" value="6" />
        </validator>
        <validator name="DoubledConjunctiveParticleGa" />
        <!--<validator name="SuggestExpression" />-->
        <!--<validator name="DoubledWord" />-->
        <!--<validator name="DoubledJoshi" />-->

        <!--Rules on symbols and terminologies-->
        <validator name="InvalidSymbol"/>
        <validator name="KatakanaEndHyphen"/>
        <validator name="KatakanaSpellCheck"/>
        <!--<validator name="SpaceBetweenAlphabeticalWord" />-->
        <validator name="ParenthesizedSentence">
            <property name="max_count" value="3"/>
            <property name="max_nesting_level" value="1"/>
            <property name="max_length" value="10"/>
        </validator>

        <!--Rules on sections and paragraphs-->
        <validator name="SectionLength">
            <property name="max_num" value="1500"/>
        </validator>
        <validator name="VoidSection" />
        <validator name="GappedSection" />
        <validator name="SectionLevel" />
        <validator name="ParagraphNumber"/>
        <validator name="DuplicatedSection" />
        <validator name="GappedSection" />

        <symbols>
            <symbol name="EXCLAMATION_MARK" value="！" invalid-chars="!" />
            <symbol name="NUMBER_SIGN" value="#" invalid-chars="＃" />
            <symbol name="DOLLAR_SIGN" value="$" invalid-chars="＄" />
            <symbol name="PERCENT_SIGN" value="%" invalid-chars="％" />
            <symbol name="QUESTION_MARK" value="？" invalid-chars="?" />
            <symbol name="AMPERSAND" value="&amp;" invalid-chars="＆" />
            <symbol name="LEFT_PARENTHESIS" value="（" invalid-chars="(" />
            <symbol name="RIGHT_PARENTHESIS" value="）" invalid-chars=")" />
            <symbol name="ASTERISK" value="*" invalid-chars="＊" />
            <symbol name="PLUS_SIGN" value="+" invalid-chars="＋" />
            <symbol name="HYPHEN_SIGN" value="ー" />
            <symbol name="SLASH" value="/" invalid-chars="／" />
            <symbol name="COLON" value=":" invalid-chars="：" />
            <symbol name="SEMICOLON" value=";" invalid-chars="；" />
            <symbol name="LESS_THAN_SIGN" value="&lt;" invalid-chars="＜" />
            <symbol name="GREATER_THAN_SIGN" value="&gt;" invalid-chars="＞" />
            <symbol name="EQUAL_SIGN" value="=" invalid-chars="＝" />
            <symbol name="AT_MARK" value="@" invalid-chars="＠" />
            <symbol name="CIRCUMFLEX_ACCENT" value="^" invalid-chars="＾" />
            <symbol name="LOW_LINE" value="_" />
            <symbol name="LEFT_CURLY_BRACKET" value="{" invalid-chars="｛" />
            <symbol name="RIGHT_CURLY_BRACKET" value="}" invalid-chars="｝" />
            <!--<symbol name="VERTICAL_VAR" value="|" invalid-chars="｜" />-->
            <symbol name="TILDE" value="~" />
            <symbol name="FULL_STOP" value="。" />
            <symbol name="COMMA" value="，" />
        </symbols>

        <!--Load JavaScript validators-->
        <validator name="JavaScript">
		    <property name="script-path" value="/redpen/js" />
		</validator>
    </validators>
</redpen-conf>
